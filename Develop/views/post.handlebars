{{> header}}

<main>
  <article>
    <h2>{{post.title}}</h2>
    <p>{{post.content}}</p>
    <p>Posted by {{post.user.username}} on {{post.createdAt}}</p>
  </article>
  <section>
    <h3>Comments</h3>
    {{#each comments}}
      <div>
        <p>{{this.comment_text}}</p>
        <p>Commented by {{this.user.username}} on {{this.createdAt}}</p>
      </div>
    {{/each}}
    {{#if logged_in}}
      <form id="new-comment-form">
        <textarea id="comment-text" placeholder="Add a comment"></textarea>
        <button type="submit">Submit</button>
      </form>
    {{/if}}
  </section>
</main>
