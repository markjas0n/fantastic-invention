{{> header}}

<main>
  <h1>Your Dashboard</h1>
  <section>
    {{#each posts}}
      <article>
        <h2>{{this.title}}</h2>
        <p>{{this.content}}</p>
        <button data-id="{{this.id}}" class="edit-post">Edit</button>
        <button data-id="{{this.id}}" class="delete-post">Delete</button>
      </article>
    {{/each}}
    <form id="new-post-form" method="POST" action="/api/posts">
      <input type="text" id="post-title" name="title" placeholder="Title" required>
      <textarea id="post-content" name="content" placeholder="Content" required></textarea>
      <button type="submit">Create Post</button>
    </form>
  </section>
</main>
